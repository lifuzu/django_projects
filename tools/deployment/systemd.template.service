[Unit]
Description=Gunicorn server for DOMAIN

[Service]
Restart=on-failure
User=rlee
WorkingDirectory=/home/rlee/sites/DOMAIN
EnvironmentFile=/home/rlee/sites/DOMAIN/.env

ExecStart=/home/rlee/sites/DOMAIN/virtualenv/bin/gunicorn \
    --bind unix:///tmp/DOMAIN.socket \
    projects.wsgi:application

[Install]
WantedBy=multi-user.target
